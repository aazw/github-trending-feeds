{
  "name": "vsc-github-trending-feeds-${localWorkspaceFolderBasename}-${devcontainerId}",
  "image": "aazw/devcontainers-devbox-python:6",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "moby": "true"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "emeraldwalk.runonsave",
        "ms-azuretools.vscode-containers",
        "ms-azuretools.vscode-docker",
        "tamasfe.even-better-toml",
        "anthropic.claude-code",
        "openai.chatgpt",
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.isort",
        "charliermarsh.ruff"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  // "workspaceMount": "source=${localWorkspaceFolder}/..,target=/workspaces,type=bind,consistency=cached",
  // "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "mounts": [
    {
      // ~/.claude に保存される claude code のセッションを永続化 (DevContainer再作成時など)
      "source": "${localWorkspaceFolder}/.claude-home-cache",
      "target": "/home/vscode/.claude",
      "type": "bind"
    },
    {
      // ~/.codex に保存される codex のセッションを永続化 (DevContainer再作成時など)
      "source": "${localWorkspaceFolder}/.codex-home-cache",
      "target": "/home/vscode/.codex",
      "type": "bind"
    }
  ],
  "containerUser": "root", // コンテナ起動時・初期化処理のユーザ. docker psできるようにするために必要
  "remoteUser": "vscode",
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
    "TZ": "Asia/Tokyo",
    "TASK_X_ENV_PRECEDENCE": "1",
    "UV_PROJECT_ENVIRONMENT": "${containerWorkspaceFolder}/.venv"
  },
  "runArgs": [
    "--name",
    "vsc-github-trending-feeds-${localWorkspaceFolderBasename}-${devcontainerId}",
    "--add-host",
    "host.docker.internal:host-gateway"
  ],
  "postCreateCommand": "task init"
}
