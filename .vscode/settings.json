{
  "editor.formatOnSave": false,
  "emeraldwalk.runonsave": {
    "commands": [
      {
        // .prettierrcのフォーマット
        "match": "\\.prettierrc$",
        "cmd": "prettier -w \"${file}\""
      },
      {
        // .prettierignoreのフォーマット
        "match": "\\.prettierignore$",
        "cmd": "prettier -w \"${file}\""
      },
      {
        // Dcokerfileのフォーマット
        "match": "\\bDockerfile$",
        "cmd": "dockerfmt -n -w \"${file}\""
      },
      {
        // シェルスクリプトのフォーマット
        "match": "\\.sh$",
        "cmd": "shfmt -w \"${file}\""
      },
      {
        // YAMLのフォーマット
        "match": "\\.ya?ml$",
        "cmd": "prettier -w \"${file}\""
      },
      {
        // JSONのフォーマット
        "match": "\\.json$",
        "cmd": "prettier -w \"${file}\""
      }
    ]
  },
  // Python
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "python.analysis.extraPaths": ["/venv/lib/python3.11/site-packages/"],

  // Back Formatter
  "black-formatter.args": ["--line-length=200"]
}
