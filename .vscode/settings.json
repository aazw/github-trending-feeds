{
  "editor.wordWrap": "off",
  "[markdown]": {
    "editor.wordWrap": "off"
  },
  "editor.formatOnSave": false,
  "emeraldwalk.runonsave": {
    "commands": [
      {
        // treefmt側でフォーマッタを選択する
        "match": ".*",
        "cmd": "treefmt \"${file}\""
      }
    ]
  },
  "python.analysis.typeCheckingMode": "strict",
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true
  },
  "search.exclude": {
    "**/.git/**": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true
  }
}
